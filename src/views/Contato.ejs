<%- include('includes/head'); %>
<%- include('includes/navbar'); %>

<div class="container">
    <div class="my-3">
        <%- include('includes/messages'); %>
    </div>
<div class="card my-5">
    <h5 class="card-header">Contato</h5>
    <div class="card-body">
        <% if (contato._id) { %>
            <form action="/contato/register/<%= contato._id %>" method="post">
          <% } else { %>
            <form action="/contato/register" method="post">
          <% } %>
        <form action="/contato/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="nome">Nome</label>
                <input type="text" class="form-control" id="nome" name="nome" value="<%= contato.nome %>">
              </div>
              <div class="form-group col-md-6">
                <label for="Sobrenome">Sobrenome</label>
                <input type="text" class="form-control" id="Sobrenome" name="Sobrenome" value="<%= contato.sobrenome %>">
              </div>

              <div class="form-group col-md-6">
                <label for="telefone">Telefone</label>
                <input type="tel" class="form-control" id="telfone" name="telefone" value="<%= contato.telefone %>">
              </div>
              <div class="form-group col-md-6">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= contato.email %>">
              </div>
            </div>
            <input type="submit" value="Salvar" class="btn btn-primary btn-sm">
            <a href="/Index" class="btn btn-secondary btn-sm">Cancelar</a>
        </form>
   
    </div>
  </div>
</div>
  <%- include('includes/footer'); %>